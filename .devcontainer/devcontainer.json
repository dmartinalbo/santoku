// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.101.0/containers/docker-existing-dockerfile
{
    "name": "Existing Dockerfile",
    // Sets the run context to one level up instead of the .devcontainer folder.
    "context": "..",
    // Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
    "dockerFile": "Dockerfile",
    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": null,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.mypyEnabled": true,
        "editor.rulers": [
            100
        ]
    },
    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "ms-python.python"
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // postCreateCommand runs commands after the container is created:
    // - enables git autocomplete and...
    // - copies ssh mounted directory as .ssh directory inside the container
    //     (this is a workaround for windows hosts. Windows doesn't transmit correctly file
    //      permissions to Linux and SSH specifies restrictive file permissions to private keys)
    "postCreateCommand": "echo source /usr/share/bash-completion/completions/git >> /root/.bashrc && mkdir -p /root/.ssh && cp /root/ssh/* /root/.ssh/ && chmod 600 /root/.ssh/*",
    // Uncomment when using a ptrace-based debugger like C++, Go, and Rust
    // This find the environment variables
    "runArgs": [
        "--env-file",
        "${localEnv:HOME}${localEnv:USERPROFILE}/.env"
    ],
    // Uncomment to use the Docker CLI from inside the container. See
    // https://aka.ms/vscode-remote/samples/docker-in-docker.
    // "mounts": [ "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" ],
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/ssh,type=bind"
    ],
    // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
    // "remoteUser": "vscode"
}